<div class="container">
<h1> <%= @task.title %> </h1>
<p> <%= @task.details %> </p>
<p>Completed : <%= @task.completed %> </p>
 <li class=""><%= link_to 'Back to List', tasks_path %></li>
 <li class=""><%= link_to 'Edit a task', edit_path %></li>
<li class=""><%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%></li>
</div>
